/**
 * @file Firestore Security Rules
 * @description This ruleset secures the 'messages' and 'subscribers' collections, restricting write access to authenticated users only.
 *   Read access is public for both collections, allowing anyone to retrieve messages and subscriber information.
 *
 * @dataStructure
 * - /messages/{messageId}: Stores messages received through the website.
 * - /subscribers/{subscriberId}: Stores information about users who have subscribed to email updates.
 *
 * @keySecurityDecisions
 * - Public read access to both 'messages' and 'subscribers' collections.
 * - Write access to both 'messages' and 'subscribers' collections are restricted to authenticated users only.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows anyone to read messages but restricts creation, updates, and deletion to authenticated users.
     * @path /messages/{messageId}
     * @allow (get, list)
     * @allow (create) request.auth != null
     * @deny (create) request.auth == null
     * @allow (update) request.auth != null
     * @deny (update) request.auth == null
     * @allow (delete) request.auth != null
     * @deny (delete) request.auth == null
     * @principle Allows public reads and authenticated writes.
     */
    match /messages/{messageId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
    }

    /**
     * @description Allows anyone to read subscriber information but restricts creation, updates, and deletion to authenticated users.
     * @path /subscribers/{subscriberId}
     * @allow (get, list)
     * @allow (create) request.auth != null
     * @deny (create) request.auth == null
     * @allow (update) request.auth != null
     * @deny (update) request.auth == null
     * @allow (delete) request.auth != null
     * @deny (delete) request.auth == null
     * @principle Allows public reads and authenticated writes.
     */
    match /subscribers/{subscriberId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
    }

    function isSignedIn() {
      return request.auth != null;
    }
  }
}